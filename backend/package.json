    "nanoid": "^4.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.4.1",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "prisma": "^5.0.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
