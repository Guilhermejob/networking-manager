generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Intention {
  id          Int       @id @default(autoincrement())
  name        String
  email       String    @unique
  phone       String?
  message     String?
  createdAt   DateTime  @default(now())
  status      String    @default("pending")
  processedAt DateTime?
  processedBy String?

  invitations Invitation[]
}

model Invitation {
  id          String    @id @default(cuid())
  token       String    @unique
  intentionId Int
  memberId    String?
  createdAt   DateTime  @default(now())
  expiresAt   DateTime?
  used        Boolean   @default(false)

  Intention Intention @relation(fields: [intentionId], references: [id])
  member    Member?   @relation(fields: [memberId], references: [id])
}

model Member {
  id                  String       @id @default(cuid())
  name                String
  email               String       @unique
  phone               String?
  joinedAt            DateTime     @default(now())
  sentIndications     Indication[] @relation("sent")
  receivedIndications Indication[] @relation("received")
  invitations         Invitation[]
  checkins            Checkin[]
}

model Indication {
  id          String           @id @default(cuid())
  title       String
  description String?
  status      IndicationStatus @default(PENDING)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  fromId      String
  toId        String
  from        Member           @relation("sent", fields: [fromId], references: [id])
  to          Member           @relation("received", fields: [toId], references: [id])
}

enum IntentionStatus {
  PENDING
  APPROVED
  REJECTED
}

enum IndicationStatus {
  PENDING
  CONTACTED
  CLOSED
  REJECTED
}

model Notice {
  id        String   @id @default(cuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  author    String
}

model Checkin {
  id        String   @id @default(cuid())
  memberId  String
  date      DateTime @default(now())
  meetingId Int?
  member    Member   @relation(fields: [memberId], references: [id])
}
